<div class="card">
  <a href="/projects/<%= project.id%>"><img class="card-img-top" src="<%= project.cover('medium')%>" alt="And this isn't my nose. This is a false one."></a>
  <div class="card-body d-flex flex-column">
    <h4><a href="#"><%= project.title%></a></h4>
    <div class="d-flex align-items-center pt-5 mt-auto">
      <div class="ml-auto text-muted">
        <a href="javascript:void(0)" class="icon d-none d-md-inline-block ml-3"><i class="fe fe-heart mr-1"></i></a>
        <% if params[:controller] == 'home'%>
        <%= link_to "/projects/change_rank/#{project.id}?move=up" do%>
        <i class="fa fa-arrow-up"></i>
        <%end%>
        <%= link_to "/projects/change_rank/#{project.id}?move=down" do%>
        <i class="fa fa-arrow-down"></i>
        <%end%>
        <%end%>
      </div>

      <div>

        <small class="d-block text-muted"></small>
      </div>

    </div>
  </div>
</div>

<% if !@project.blank?%>
<div id="shoa-box"></div>
<div id="shoa-modal"></div>
<input type="hidden" id="shoa-type"  value="Post">
<input type="hidden" id="shoa-source-id"  value="<%= @project.id%>">
<input type="hidden" id="shoa-title"  value="<%= @project.title%>">
<input type="hidden" id="shoa-content"  value="<%= @project.details%>">
<%end%>
<% if params[:action] == 'show'%>
<div class="list-group list-group-transparent mb-2 text-center mt-4">
  <%= link_to @project, class: "list-group-item list-group-item-action active small", style:'font-weight:normal;',  method: :delete, data: { confirm: 'Are you sure?' } do%>
  <i class="fe fe-trash" style="vertical-align:middle;"></i> <%=t :destroy%>
  <%end%>
</div>
<div class="list-group list-group-transparent mb-2 text-center">
  <%= link_to "/projects/#{@project.id}/edit", class: "list-group-item list-group-item-action active small", style:'font-weight:normal;' do%>
  <i class="fe fe-edit" style="vertical-align:middle;"></i> <%=t :edit%>
  <%end%>
</div>
<%end%>
