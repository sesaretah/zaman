<div id='project-box'>

  <div class='card-inner'>
    <div class='row'>
      <div class='col-md-12'>
        <%= link_to "/milestones/new?project_id=#{project.id}", remote: true, class: "btn btn-sm btn-secondary" do %>
        <i class="fe fe-plus"></i> <%=t :new_milestone %>
        <%end%>
        <%= link_to "/milestones/list/#{project.id}", remote: true, class: "btn btn-sm btn-secondary" do %>
        <i class="fe fe-list"></i> <%=t :milestones_list %>
        <%end%>
      </div>
    </div>
  </div>
  <div class="card-body" >
    <%= render partial:'milestones/list', locals: { project: project} %>
  </div>
</div>
