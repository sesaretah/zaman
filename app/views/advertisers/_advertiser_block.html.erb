<div class="card">
  <a href="/advertisers/<%= advertiser.id%>"><img class="card-img-top" src="<%= advertiser.cover('medium')%>" alt="And this isn't my nose. This is a false one."></a>
  <div class="card-body d-flex flex-column">
    <h4><a href="#"><%= advertiser.title%></a></h4>
    <div class="d-flex align-items-center pt-5 mt-auto">
      <div class="ml-auto text-muted">
        <a href="javascript:void(0)" class="icon d-none d-md-inline-block ml-3"><i class="fe fe-heart mr-1"></i></a>
        <% if params[:controller] == 'home'%>
        <%= link_to "/advertisers/change_rank/#{advertiser.id}?move=up" do%>
        <i class="fa fa-arrow-up"></i>
        <%end%>
        <%= link_to "/advertisers/change_rank/#{advertiser.id}?move=down" do%>
        <i class="fa fa-arrow-down"></i>
        <%end%>
        <%end%>
      </div>

      <div>

        <small class="d-block text-muted"></small>
      </div>

    </div>
  </div>
</div>

<% if params[:action] == 'show'%>
<div class="list-group list-group-transparent mb-2 text-center">
  <%= link_to @advertiser, class: "list-group-item list-group-item-action active small", style:'font-weight:normal;',  method: :delete, data: { confirm: 'Are you sure?' } do%>
  <i class="fe fe-trash" style="vertical-align:middle;"></i> <%=t :destroy%>
  <%end%>
</div>
<div class="list-group list-group-transparent mb-2 text-center">
  <%= link_to "/advertisers/#{@advertiser.id}/edit", class: "list-group-item list-group-item-action active small", style:'font-weight:normal;' do%>
  <i class="fe fe-edit" style="vertical-align:middle;"></i> <%=t :edit%>
  <%end%>
</div>
<%end%>
